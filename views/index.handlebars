<div class="container-fluid">
  <div class="row ">
    <div class="col-md-12 bg-info">
      <nav class="navbar navbar-expand-lg navbar-light bg-info ">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="navbar-toggler-icon"></span>
        </button> <a class="navbar-brand" href="#">TechLab</a>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="navbar-nav">
            <li class="nav-item">
              <button class="btn btn-primary my-2 my-sm-0 scrapeButton" type="submit">
                Scrape Articles
              </button>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1>
          TechLab! <small>Get latest technology news!</small>
        </h1>
      </div>
    </div>
  </div>

  <div class="row ">
    <div class="col-md-12 ">

      {{#each articles}}
      <div class="row border border-dark rounded m-3 p-2 bg-light">
        <div class="col-md-12 border-secondary rounded-lg border-left">
          <div class="row">
            <div class="col-md-12">
              <a href="{{this.link}}" target="_blank">
                <h2>{{this.title}}</h2>
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <p>{{this.summary}}</p>
            </div>
          </div>
          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#{{this._id}}Comments"
            aria-expanded="false" aria-controls="{{this._id}}Comments">
            Toggle Comments
          </button>
          <div class="collapse"id="{{this._id}}Comments">
          <div class="row " >
            <div class="col-md-12">
              <h3>Comments:</h3>
              <ul>
                {{#each this.comments}}
                <li>{{this}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <form class="commentForm" data-id="{{this._id}}">
                  <h4 for="exampleFormControlTextarea1">Write Your Comment</h4>
                  <textarea class="form-control" id="{{this._id}}" rows="1" placeholder="Required example textarea"
                    required></textarea></textarea>
              </div>
              <button class="btn btn-primary" type="submit">Comment</button>
              </form>
            </div>
          </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>

</div>
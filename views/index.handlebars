<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="navbar-toggler-icon"></span>
        </button> <a class="navbar-brand" href="#">TechLab</a>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="navbar-nav">
            <li class="nav-item">
              <button class="btn btn-primary my-2 my-sm-0 scrapeButton" type="submit">
                Scrape Articles
              </button>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1>
          TechLab! <small>Get latest technology news!</small>
        </h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      {{#each articles}}
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <a href="{{this.link}}" target="_blank">
                <h2>{{this.title}}</h2>
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <p>{{this.summary}}</p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <form>
                  <label for="exampleFormControlTextarea1">Write Your Comment</label>
                  <textarea class="form-control" id="{{this._id}}" rows="3"></textarea>
              </div>
              <button class="btn btn-primary commentButton" data-id="{{this._id}}" type="submit">Comment</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>

</div>